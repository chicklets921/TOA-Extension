{
    "name": "TOA Enhancer",
    "description": "Corrects the styling of TOA and adds new functionality",
    "version": "0.3",
    "manifest_version": 3,
    "icons": {
        "16": "/images/logo_16x16.png",
        "32": "/images/logo_32x32.png",
        "48": "/images/logo_48x48.png",
        "128": "/images/logo_128x128.png"
    },
    "permissions": [
        "storage"
    ],
    "background": {
        "service_worker": "js/background.js"
    },
    "action":{
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "REMOVED FOR GITHUB UPLOAD",
                "REMOVED FOR GITHUB UPLOAD"
            ],
            "css": [
                "css/TOA Light Mode.css"
            ],
			"js": [
                "js/OP_LOG_background.js"
            ]
        },
		{
			"matches": [
                "REMOVED FOR GITHUB UPLOAD"
            ],
            "css": [
                "css/TOA Light Mode.css"
            ],
            "js": [
                "js/DTIS_background.js"
            ]
		},
        {
            "matches": [
                "REMOVED FOR GITHUB UPLOAD"
            ],
            "css": [
                "css/TOA Light Mode.css"
            ]
        },
        {
            "matches": [
                "REMOVED FOR GITHUB UPLOAD"
            ],
            "css": [
                "css/TOA Light Mode.css"
            ],
			"js": [
                "js/ORL_background.js"
            ]
        }
    ],
	"web_accessible_resources": [
        {
            "resources": [
                "js/outage_calc.js",
				"js/open_logs.js",
                "js/outage_request_list.js",
                "js/highlight_name.js"
            ],
            "matches": [
                "REMOVED FOR GITHUB UPLOAD"
            ]
        }
    ]
}